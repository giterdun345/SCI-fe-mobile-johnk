{
  "name": "sci-fe-dev-challenge-mobile",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "echo \"Please use 'yarn web-with-proxy' or 'yarn android-with-proxy' or 'yarn ios-with-proxy'\" && exit 1",

    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "expo lint",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "validate": "yarn lint && yarn test",
    "proxy": "lcp --proxyUrl https://api.swu-db.com",
    "web-with-proxy": "yarn validate && concurrently \"yarn proxy\" \"yarn web\"",
    "android-with-proxy": "yarn validate && concurrently \"yarn proxy\" \"yarn android\""
  },
  "dependencies": {
    "@expo/metro-runtime": "~4.0.0",
    "@expo/webpack-config": "^19.0.1",
    "@react-native-picker/picker": "^2.10.2",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "axios": "^1.7.9",
    "expo": "~52.0.20",
    "expo-blur": "~14.0.1",
    "expo-status-bar": "~2.0.0",
    "expo-symbols": "~0.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.5",
    "react-native-reanimated": "^3.16.5",
    "react-native-safe-area-context": "4.12.0",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~18.3.12",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "~8.0.1",
    "eslint-config-universe": "^14.0.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-expo": "^52.0.2",
    "local-cors-proxy": "^1.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3"
  },
  "private": true
}
